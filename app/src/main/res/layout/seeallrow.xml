<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/reportcon"
            android:background="@color/blue_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/white"
                android:id="@+id/seeallclick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="100dp">

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:background="@color/tethintcolor" />


                    <TextView
                        android:id="@+id/view"
                        style="@style/shadoweffect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/black"
                        android:padding="5dp"
                        android:text="Like 9k\nView 10k"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <market.goldandgo.videonew1.API.Zawgyitextview
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:background="@color/backcolorsolid"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:text="Movie Title"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <market.goldandgo.videonew1.API.Zawgyitextview
                        android:id="@+id/type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@color/backcolorsolid"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:text="Movie Type"
                        android:textColor="@color/black"
                        android:textSize="8sp" />

                    <market.goldandgo.videonew1.API.Zawgyitextview
                        android:id="@+id/detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:maxLines="2"
                        android:padding="5dp"
                        android:text="Movie Description"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>